{% extends "main_layout.html.twig" %}

{% block content %}
    <div class="col-xs-10 col-xs-offset-1 text-justified">
        <h1>Welcome on the best game website to share and read information about games !</h1>
            <p>Feel free to navigate throught the bottom bar !</p>
        <table class="table table-hover">
            <thead>
            <tr class="table-header">
                <th>{{ 'Game'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for game in games.currentPageResults %}
                {{ render( controller( 'ez_content::viewAction', { 'location': game.valueObject, 'viewType': 'line' } )) }}
            {% endfor %}
            </tbody>
        </table>
        {% if games.haveToPaginate() %}
            <div class="col-xs-12 text-center">
                <div class="pagerfanta pagination">
                    {{ pagerfanta( games, 'ez', {'routeName': location } ) }}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}